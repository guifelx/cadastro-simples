@model ProjetoMVC.Models.Contato;

@{
    ViewData["Tittle"] = "Editar contato";
}
<div class="main__content">
    <div class="titulo">
        <h1>Editar contato</h1>
    </div>
    <div class="editar">
        <form class="editar__contato" asp-action="Editar">
            <div>
                <label hidden asp-for="Nome"></label>
                <input asp-for="Nome" class="editar__contato__input" placeholder="Nome"/>
            </div>
            <div>
                <label hidden asp-for="Telefone"></label>
                <input asp-for="Telefone" class="editar__contato__input" placeholder="Telefone"/>
            </div>
            <div>
                <label asp-for="Ativo" ></label>
                <input type="checkbox" asp-for="Ativo" class="check-btn"/>
            </div>
            <div>
                <button type="submit" value="Editar" class="btn-padrao" />Editar</button>
            </div>
            <div>
                <a class="voltar-link" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>   
</div>